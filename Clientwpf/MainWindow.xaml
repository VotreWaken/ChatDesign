<Window x:Class="Clientwpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clientwpf"
        mc:Ignorable="d"
        Title="Client" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Width="60" Click="Button_Click" Height="20">Server</Button>
        <Button Width="60" Click="Button_Click_1" Height="20" Grid.Column="1">Client</Button>
        <Button Width="60" Click="Button_Click_2" Height="20" Grid.Column="2">Pause</Button>
        <Button Width="60" Click="Button_Click_3" Height="20" Grid.Column="2" Grid.Row="1">Resume</Button>
        <Label Grid.Row="1">Mic</Label>
        <ComboBox Name="Mic" Width="200" Height="30" Grid.Row="1"></ComboBox>
        <Label Grid.Row="1" Grid.Column="1">Sound</Label>
        <ComboBox Name="Sound" Width="200" Height="30" Grid.Row="1" Grid.Column="1"></ComboBox>
    </Grid>
</Window>
